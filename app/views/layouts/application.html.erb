<!DOCTYPE html>
<html>
  <head>
    <title>FlightBooker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash.any? %>
      <div class="navbar-flash">
        <p class="flash">
          <%= flash.notice %>
          <%= flash.alert %>
        </p>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
